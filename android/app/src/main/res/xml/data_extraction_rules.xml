<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude specific files or directories from cloud backup -->
        <exclude domain="sharedpref" path="flutter.preferences" />
        <exclude domain="database" path="todo_database.db" />
        <exclude domain="database" path="todo_database.db-shm" />
        <exclude domain="database" path="todo_database.db-wal" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Include specific files or directories for device transfer -->
        <include domain="sharedpref" path="." />
        <include domain="database" path="." />
    </device-transfer>
</data-extraction-rules>

